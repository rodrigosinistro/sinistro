<div class="ve-flex-col ve-window min-h-0 h-100">
	<div class="ve-flex-v-stretch input-group input-group--top">
		<button class="btn-5et veapp__btn-filter" name="btn-filter">Filter</button>
		<button class="btn btn-5et" title="Toggle Filter Summary Display" name="btn-toggle-summary"><span class="glyphicon glyphicon-resize-small"></span></button>
		<input type="search" class="search w-100 form-control" placeholder="Find compendium...">
		<button class="btn-5et veapp__btn-list-reset" name="btn-reset">Reset</button>
	</div>

	<div class="fltr__mini-view btn-group"></div>

	<div class="ve-flex-v-stretch input-group input-group--bottom mb-1" data-name="wrp-btns-sort">
		<label class="btn btn-5et col-2 ve-flex-vh-center"><input type="checkbox" name="cb-select-all"></label>
		<button class="btn-5et col-10 sort name" data-sort="name">Name</button>
	</div>

	<div class="veapp__list h-100 mb-1">
		{{#each rows}}
			<label class="ve-flex w-100 veapp__list-row veapp__list-row-hoverable">
				<span class="col-2 ve-flex-vh-center"><input type="checkbox" class="no-events"></span>
				<span class="col-10 name">{{name}}</span>
			</label>
		{{/each}}
	</div>

	<div class="ve-flex-v-end ve-flex-vh-center">
		<div class="mr-2 no-wrap">Set To:</div>
		<select name="sel-visibility" class="mr-2">
			<option value="0">Visible</option>
			<option value="1">Hidden</option>
		</select>
		<button class="btn-5et w-100" name="btn-run">Set Visibility</button>
	</div>
</div>
