<form class="{{cssClass}} ve-flex-col h-100 {{#if document.flags.plutonium.iframe_url}}p-0{{/if}}" autocomplete="off">
	<input name="name" type="text" value="{{data.name}}" placeholder="Entry Title"/>

	<select name="folder">
		{{#select data.folder}}
			<option value=""></option>
			{{#each folders}}
				<option value="{{this.id}}">{{this.name}}</option>
			{{/each}}
		{{/select}}
	</select>

	{{#if data.flags.plutonium.iframe_url}}
		<iframe src="{{data.flags.plutonium.iframe_url}}" class="w-100 h-100" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
	{{else}}
		{{editor content=data.content target="content" button=true editable=editable owner=owner}}

		{{#if editable}}
			<button type="submit" name="submit"><i class="fas fa-feather-alt"></i> {{localize "JOURNAL.Submit"}}</button>
		{{/if}}
	{{/if}}
</form>
